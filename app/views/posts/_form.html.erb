
<div class="login-form">
  <h2 class="text-center" >Create Post</h2>


<%= form_with(model: post) do |form| %>



      <div class="form-group">
        <%= form.label :author %><br />
        <%= form.text_field :author, class: "form-control",autofocus: true, autocomplete: "email" %>
      </div>
      <div class="form-group">
        <%= form.label :title %><br />
        <%= form.text_field :title, class: "form-control",autofocus: true, autocomplete: "email" %>
      </div>
      <div class="form-group">
        <%= form.label :body %><br />
        <%= form.text_area :body, class: "form-control",autofocus: true, autocomplete: "email" %>
      </div>

    <div class="actions">
    <%= form.submit "submit",class: "btn btn-primary btn-block"%>
  </div>
<% end %>
</div>